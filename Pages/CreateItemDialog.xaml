<Window x:Class="WPFBMI.CreateItemDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBMI"
        mc:Ignorable="d"
        Title="CreateItemDialog" Height="200" Width="300">
    <StackPanel>
        <Label x:Name="ItemVarietyBox" Content="Item Type" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200"/>
        <TextBox Name="ItemTypeTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" KeyDown="ItemTypeTextBox_KeyDown"/>
        <Button Content="Create" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="75" Height="30" Click="OkButton_Click" Margin="0,0,0,30"/>
    </StackPanel>
</Window>
