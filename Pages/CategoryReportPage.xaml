<Page x:Class="WPFBMI.Pages.CategoryReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFBMI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CategoryReportPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="TrackGrid" ItemsSource="{Binding Items}" AutoGenerateColumns="False" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="2"
               CanUserAddRows="False" CanUserDeleteRows="False" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding name}" IsReadOnly="True" />
                <DataGridTextColumn Header="Number of Active Tracks" Binding="{Binding activeCount}" IsReadOnly="True" />
                <DataGridTextColumn Header="All-Time Royalty Amount" Binding="{Binding amount, StringFormat={}{0:C}}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Last 10 Statements" Binding="{Binding amountLast10, StringFormat={}{0:C}}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Last 4 Statements" Binding="{Binding amountLast4, StringFormat={}{0:C}}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Last Statement" Binding="{Binding amountLast1, StringFormat={}{0:C}}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Best Track" Binding="{Binding bestTrack}" IsReadOnly="True" />
                <DataGridTextColumn Header="Best Track Amount" Binding="{Binding bestTrackAmount, StringFormat={}{0:C}}" IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
