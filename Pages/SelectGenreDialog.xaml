<Window x:Class="WPFBMI.SelectGenreDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBMI"
        mc:Ignorable="d"
        Title="Select Genre" Height="300" Width="500">
    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="CreateNewButton" Content="Create New Genre" Click="CreateNew" Grid.Row="1" Grid.Column="0"/>
        <Button x:Name="CancelButton" Content="Cancel" Click="CancelAndExit" Grid.Column="1" Grid.Row="1"/>
        <Label x:Name="SelectedRootTrackLabel" Content="Track: " Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"/>
        <DataGrid x:Name="TrackGrid" ItemsSource="{Binding Genres}" AutoGenerateColumns="False" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="3"
                  CanUserAddRows="False" CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Genre" Binding="{Binding Name}" IsReadOnly="True" />
                <DataGridTemplateColumn Header="">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Assign" 
                            Click="SelectItem" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
