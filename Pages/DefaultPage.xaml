<Page x:Class="WPFBMI.Pages.DefaultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFBMI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DefaultPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Row="1" Grid.Column="1" BorderBrush="Black" BorderThickness="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Current Data:" FontWeight="Bold" FontSize="18" Grid.Row="0" HorizontalAlignment="Center"/>
                <Label x:Name="StatementNumLabel" Grid.Row="2" HorizontalAlignment="Center" />
                <Label x:Name="GenreNumLabel" Grid.Row="3" HorizontalAlignment="Center"/>
                <Label x:Name="SubgenreNumLabel" Grid.Row="4" HorizontalAlignment="Center"/>
                <Label x:Name="AlbumNumLabel" Grid.Row="5" HorizontalAlignment="Center"/>
                <Label x:Name="LibraryNumLabel" Grid.Row="6" HorizontalAlignment="Center"/>
                <Label x:Name="TrackNumLabel" Grid.Row="7" HorizontalAlignment="Center"/>
                <Label x:Name="RootTrackNumLabel" Grid.Row="8" HorizontalAlignment="Center"/>
                <Label x:Name="UsageNumLabel" Grid.Row="9" HorizontalAlignment="Center"/>
                <Label x:Name="CountryNumLabel" Grid.Row="10" HorizontalAlignment="Center"/>
                <Button Content="Refresh Data" Grid.Row="12" HorizontalAlignment="Stretch" Width="100" Margin="0,10,0,0" Click="UpdatePageClick"/>

            </Grid>
        </Border>

    </Grid>
    
</Page>
